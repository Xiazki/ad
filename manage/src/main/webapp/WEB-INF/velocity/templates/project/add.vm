<div class="page-fixed-main-content">
    <div class="row">
        <div class="col-md-6 ">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-red-sunglo">
                        <i class="icon-settings font-red-sunglo"></i>
                        <span class="caption-subject bold uppercase"> 添加项目 </span>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form role="form" id="project-save">
                        <div class="form-body">
                            <div class="form-group">
                                <label>项目名称</label>
                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-envelope"></i>
                                                    </span>
                                    <input type="text" id="projectName" class="form-control" value="">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>详情</label>
                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-envelope"></i>
                                                    </span>
                                    <textarea class="form-control" id="projectDesc" rows="3"
                                              placeholder="Email Address"></textarea></div>
                            </div>
                            <div class="form-group">
                                <label>所在服务器IP</label>
                                <div class="input-icon">
                                    <i class="fa fa-bell-o font-green"></i>
                                    <input type="text" class="form-control" id="serverIp" value=""></div>
                            </div>
                            <div class="form-group">
                                <label>路 径</label>
                                <div class="input-icon right">
                                    <i class="fa fa-microphone fa-spin font-blue"></i>
                                    <input type="text" class="form-control" id="path" placeholder="Right icon"
                                           value=""></div>
                            </div>

                        </div>
                        <div class="form-actions">
                            <div class="btn-group">
                                <button class="btn blue dropdown-toggle" id="submit"
                                        data-toggle="dropdown"
                                        aria-haspopup="true" aria-expanded="false">保存
                                </button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/static/pages/js/project/add.js" type="text/javascript"></script>