<div class="page-fixed-main-content">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption font-red-sunglo">
                        <i class="icon-settings font-red-sunglo"></i>
                        #if(!$!isEdit)
                            <span class="caption-subject bold uppercase"> 添加任务 </span>
                        #else
                            <span class="caption-subject bold uppercase"> 编辑任务 </span>
                        #end
                        <input id="id" type="hidden" value="$!id"/>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form action="javascript:;" id="permission-add">
                        <div class="form-body">
                            <div class="form-group">
                                <label>任务标题*</label>
                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-file-text"></i>
                                                    </span>
                                    <input type="text" class="form-control" id="title"
                                           placeholder="" value=""></div>
                            </div>
                            <div class="form-group">
                                <label>任务详情</label>
                                <div class="input-group">
                                    <div style="height: 400px" id="detail_editor">

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-4 col-md-9">
                                    <button id="submit" type="submit" class="btn blue">提交</button>
                                    <button type="reset" class="btn default">取消</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/static/pages/js/task/add_task.js" type="text/javascript"></script>